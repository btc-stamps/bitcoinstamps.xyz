{
  "name": "bitcoinstamps-xyz",
  "version": "1.0.0",
  "description": "Official documentation for Bitcoin Stamps metaprotocols and art platform (SRC-20, SRC-101, SRC-721, OLGA)",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lighthouse": "lhci autorun",
    "test:leo-api": "node docs/.vitepress/test-leo-system.js",
    "test:translation": "node docs/.vitepress/test-translation-system.js",
    "test:comparisons-api": "node docs/.vitepress/test-comparisons-api.js",
    "build:with-test": "npm run test:leo-api && npm run test:translation && npm run test:comparisons-api && npm run docs:build",
    "whitepaper:generate": "node scripts/generate-whitepaper-pdf.js"
  },
  "keywords": [
    "bitcoin",
    "stamps",
    "metaprotocols",
    "art platform",
    "documentation",
    "src-20",
    "src-101",
    "src-721",
    "olga",
    "counterparty",
    "bitcoin art",
    "permanent digital assets"
  ],
  "author": "Bitcoin Stamps Community",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "md-to-pdf": "^5.2.5",
    "vitepress": "^1.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/btc-stamps/bitcoinstamps.xyz.git"
  },
  "homepage": "https://bitcoinstamps.xyz"
}
